    <div id="imageModal" class="modal">
        <span class="close-modal" onclick="closeModal()">&times;</span>
        <img class="modal-content" id="modalImage">
    </div>

    <script>
        let currentSection = null;

        function showContent(sectionId) {
            // Esconde a seção atualmente visível, se houver
            if (currentSection) {
                document.getElementById(currentSection).style.display = 'none';
            }
            // Esconde as opções de navegação
            document.querySelector('.nav-options').style.display = 'none';
            document.querySelector('.header p').style.display = 'none'; // Esconde o subtítulo também

            // Mostra a nova seção
            const section = document.getElementById(sectionId);
            section.style.display = 'block';
            currentSection = sectionId;
        }

        function hideContent(sectionId) {
            document.getElementById(sectionId).style.display = 'none';
            currentSection = null;
            // Mostra as opções de navegação novamente
            document.querySelector('.nav-options').style.display = 'flex';
            document.querySelector('.header p').style.display = 'block'; // Mostra o subtítulo novamente
        }

        // Funções do Modal de Imagem
        const modal = document.getElementById('imageModal');
        const modalImg = document.getElementById('modalImage');

        function openModal(src) {
            modal.style.display = 'flex'; // Alterado para flex para centralizar
            modalImg.src = src;
        }

        function closeModal() {
            modal.style.display = 'none';
        }

        // Fechar modal clicando fora da imagem (opcional)
        window.onclick = function(event) {
            if (event.target == modal) {
                closeModal();
            }
        }
    </script>
